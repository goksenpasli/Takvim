<Window x:Class="Takvim.MainWindow" x:Name="Window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ice="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" xmlns:local="clr-namespace:Takvim"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    Title="Takvim"
    Width="800" Height="450"
    d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
    UseLayoutRounding="True" WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SliderResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:FileExtensionToIconConverter x:Key="FileExtensionToIconConverter" />
            <local:BrushToColorConverter x:Key="BrushToColorConverter" />
            <local:SelectedDateToDataListConverter x:Key="SelectedDateToDataListConverter" />
            <local:ŞuAnkiAyColorConverter x:Key="ŞuAnkiAyColorConverter" />
            <local:IntBooleanZeroConverter x:Key="IntBooleanZeroConverter" />
            <Storyboard x:Key="TimerColorAnimation" RepeatBehavior="Forever" Timeline.DesiredFrameRate="3">
                <ColorAnimation Storyboard.TargetProperty="(Button.BorderBrush).(SolidColorBrush.Color)" From="Black" To="Red" Duration="00:00:01" />
            </Storyboard>
            <local:NullableToBooleanConverter x:Key="NullableToBooleanConverter" />
            <local:Data x:Key="Data" />
            <local:XmlDateConverter x:Key="XmlDateConverter" />
            <local:Base64ImageConverter x:Key="Base64ImageConverter" />
            <XmlDataProvider x:Key="XmlData" XPath="Veriler/Veri" />
            <CollectionViewSource x:Key="Cvs" Source="{StaticResource XmlData}">
                <CollectionViewSource.SortDescriptions>
                    <scm:SortDescription Direction="Descending" PropertyName="Gun" />
                </CollectionViewSource.SortDescriptions>
            </CollectionViewSource>
            <CollectionViewSource x:Key="FilteredCvs" Filter="CollectionViewSource_Filter" Source="{StaticResource XmlData}" />
            <Viewbox x:Key="Bayrak" x:Shared="false">
                <Canvas Width="32.000" Height="21.333">
                    <Path Data=" M 0.000,0.000 L 32.000,0.000 L 32.000,21.333 L 0.000,21.333 L 0.000,0.000 Z" Fill="Red" />
                    <Path Data=" M 10.667,5.330 C 12.565,5.330 14.231,6.322 15.176,7.815 C 14.395,6.945 13.262,6.397 12.001,6.397 C 9.645,6.397 7.735,8.309 7.735,10.667 C 7.735,13.025 9.645,14.936 12.001,14.936 C 13.262,14.936 14.395,14.389 15.176,13.518 C 14.231,15.012 12.565,16.004 10.667,16.004 C 7.722,16.004 5.335,13.614 5.335,10.667 C 5.335,7.719 7.722,5.330 10.667,5.330 Z" Fill="White" />
                    <Path Data=" M 15.215,10.667 L 17.169,10.038 L 17.165,7.993 L 18.368,9.650 L 20.320,9.014 L 19.110,10.667 L 20.320,12.319 L 18.368,11.683 L 17.165,13.341 L 17.169,11.295 L 15.215,10.667 Z" Fill="White" />
                </Canvas>
            </Viewbox>
            <local:YarımGünTatilConverter x:Key="YarımGünTatilConverter" />
            <local:GünTatilConverter x:Key="GünTatilConverter" />
            <CollectionViewSource x:Key="Günler" Source="{Binding Günler}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription PropertyName="Ay" />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
            <local:DateNoteCountConverter x:Key="DateNoteCountConverter" />
            <Style x:Key="ListBoxTümListeItemContainerStyle" TargetType="{x:Type ListBoxItem}">
                <Setter Property="BorderBrush" Value="Blue" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding XPath=@Onemli}" Value="true">
                        <Setter Property="Background" Value="Red" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"
            BorderBrush="Black" BorderThickness="1">
            <TextBox Text="{Binding SeçiliYıl, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" FontWeight="Bold" />
        </Border>
        <Button Content="ç"
            Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"
            FontFamily="Wingdings"
            Command="{Binding Geri}"
            ToolTip="ÖNCEKİ YIL" />
        <Slider Grid.Row="1" Grid.Column="1"
            IsDirectionReversed="True" IsSnapToTickEnabled="True" IsTabStop="False" Maximum="12"
            Minimum="1" Orientation="Vertical"
            Style="{StaticResource SliderStyle}"
            Value="{Binding SatırSayısı}" />
        <Button Content="R"
            Grid.Row="2" Grid.Column="1"
            Command="{Binding SatırSütünSıfırla, Mode=OneWay}"
            IsTabStop="False" />
        <ListBox Grid.Row="1" Grid.Column="2" Grid.RowSpan="1"
            ItemsSource="{Binding Mode=OneWay, Source={StaticResource Günler}}"
            SelectedIndex="{Binding BugünIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="IsTabStop" Value="False" />
                    <Setter Property="Margin" Value="1" />
                    <Setter Property="BorderThickness" Value="0.5" />
                    <Setter Property="BorderBrush" Value="#FF145CD6" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding GünAdı}" Value="Cmt">
                            <Setter Property="Background" Value="{Binding Path=DataContext.SeçiliRenkCmt, ElementName=Window}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding GünAdı}" Value="Paz">
                            <Setter Property="Background" Value="{Binding Path=DataContext.SeçiliRenkPaz, ElementName=Window}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Converter={StaticResource GünTatilConverter}, Mode=OneWay}" Value="true">
                            <Setter Property="Background" Value="{Binding Path=DataContext.ResmiTatilRenk, ElementName=Window}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Converter={StaticResource YarımGünTatilConverter}, Mode=OneWay}" Value="true">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush ice:Freeze="True" StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Offset="0.5" Color="Transparent" />
                                        <GradientStop Offset="0.5" Color="{Binding DataContext.ResmiTatilRenk, Converter={StaticResource BrushToColorConverter}, ElementName=Window}" />
                                        <LinearGradientBrush.RelativeTransform>
                                            <RotateTransform Angle="45" CenterX="0.5" CenterY="0.5" />
                                        </LinearGradientBrush.RelativeTransform>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.GroupStyle>
                <GroupStyle>
                    <GroupStyle.Panel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding SütünSayısı}" Rows="{Binding SatırSayısı}" />
                        </ItemsPanelTemplate>
                    </GroupStyle.Panel>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="GroupItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <GroupBox Background="{Binding Name, Converter={StaticResource ŞuAnkiAyColorConverter}}" Margin="1">
                                            <GroupBox.Header>
                                                <TextBlock Text="{Binding Path=Name, Mode=OneWay}" FontWeight="Bold" TextAlignment="Center" />
                                            </GroupBox.Header>
                                            <Border Background="{Binding DataContext.GövdeRenk, ElementName=Window}">
                                                <ItemsPresenter />
                                            </Border>
                                        </GroupBox>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListBox.GroupStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Background="Transparent" BorderBrush="Transparent" Command="{Binding VeriEkleEkranı}">
                        <Button.Content>
                            <Canvas Width="27" Height="27">
                                <ContentControl Canvas.Right="0"
                                    Width="16" Height="10"
                                    IsTabStop="False">
                                    <ContentControl.ToolTip>
                                        <ToolTip>
                                            <ListBox ItemsSource="{Binding Tatiller, Source={StaticResource GünTatilConverter}}">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock>
                                                            <Run Text="{Binding Item2, Mode=OneWay}" />
                                                            <Run Text="{Binding Item1, Mode=OneWay}" />
                                                            <Run Text="{Binding Item3, Mode=OneWay}" />
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </ToolTip>
                                    </ContentControl.ToolTip>
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Setter Property="Content" Value="{x:Null}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Converter={StaticResource GünTatilConverter}, Mode=OneWay}" Value="true">
                                                    <Setter Property="Content" Value="{StaticResource Bayrak}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                                <TextBlock FontSize="11">
                                    <Run Text="{Binding Gün}" />
                                    <LineBreak />
                                    <Run Text="{Binding GünAdı}" />
                                </TextBlock>
                                <TextBlock Canvas.Right="0" Canvas.Bottom="0"
                                    DataContext="{Binding Mode=OneWay, Converter={StaticResource DateNoteCountConverter}}"
                                    FontSize="8">
                                    <Run Text="{Binding VeriSayısı, StringFormat=\{0:D\}}">
                                        <Run.ToolTip>
                                            <ListBox ItemsSource="{Binding Mode=OneWay, Converter={StaticResource SelectedDateToDataListConverter}}" ItemContainerStyle="{StaticResource ListBoxTümListeItemContainerStyle}">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding XPath=Aciklama}" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Run.ToolTip>
                                    </Run>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding VeriSayısı}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Canvas>
                        </Button.Content>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding VeriSayısı, Converter={StaticResource IntBooleanZeroConverter}}" Value="true">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard x:Name="Sb" Storyboard="{StaticResource TimerColorAnimation}" />
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding VeriSayısı}" Value="0">
                                        <DataTrigger.EnterActions>
                                            <StopStoryboard BeginStoryboardName="Sb" />
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="7" FirstColumn="{Binding Items[0].Offset}" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <Slider Grid.Row="2" Grid.Column="2"
            VerticalAlignment="Center"
            IsSnapToTickEnabled="True" IsTabStop="False" Maximum="12" Minimum="1"
            Style="{StaticResource SliderStyle}"
            Value="{Binding SütünSayısı}" />
        <Grid Grid.Row="1" Grid.Column="3" Grid.RowSpan="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox Header="TÜM LİSTE"
                Grid.Row="0"
                Margin="2"
                FontWeight="Bold">
                <ListBox Background="Transparent" ItemsSource="{Binding Mode=OneWay, Source={StaticResource Cvs}}" ItemContainerStyle="{StaticResource ListBoxTümListeItemContainerStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="ç"
                                        Background="Transparent" BorderBrush="Transparent"
                                        FontFamily="Wingdings"
                                        Command="{Binding DataContext.YılaGit, ElementName=Window}"
                                        CommandParameter="{Binding Mode=OneWay, XPath=Gun}"
                                        ToolTip="YILA GİT" />
                                    <Grid>
                                        <Ellipse Width="16" Height="16" Fill="{Binding XPath=@Renk}" />
                                        <TextBlock Text="{Binding XPath=@Saat}"
                                            HorizontalAlignment="Center" VerticalAlignment="Center"
                                            FontSize="10" FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding XPath=@Saat}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <TextBlock.ToolTip>
                                                <TextBlock Text="{Binding StringFormat=\{0\} Saatlik Etkinlik Düzenlendi, XPath=@Saat}" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </Grid>
                                    <Rectangle Width="{Binding ImageSource.Width, ElementName=Img}"
                                        Height="{Binding ImageSource.Height, ElementName=Img}"
                                        Margin="3,0"
                                        RadiusX="10" RadiusY="10" ToolTipService.InitialShowDelay="500">
                                        <Rectangle.Fill>
                                            <ImageBrush x:Name="Img" ImageSource="{Binding ConverterParameter=96, Converter={StaticResource Base64ImageConverter}, XPath=Resim}" />
                                        </Rectangle.Fill>
                                        <Rectangle.ContextMenu>
                                            <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Mode=Self}}">
                                                <MenuItem Header="SAKLA" Command="{Binding ResimSakla, Source={StaticResource Data}}" CommandParameter="{Binding Mode=OneWay, XPath=Resim}" />
                                            </ContextMenu>
                                        </Rectangle.ContextMenu>
                                        <Rectangle.ToolTip>
                                            <Image RenderOptions.BitmapScalingMode="Fant" Source="{Binding Converter={StaticResource Base64ImageConverter}, XPath=Resim}" />
                                        </Rectangle.ToolTip>
                                    </Rectangle>
                                    <TextBlock TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Width" Value="70" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ImageSource, ElementName=Img}" Value="{x:Null}">
                                                        <Setter Property="Width" Value="140" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="{Binding Converter={StaticResource XmlDateConverter}, StringFormat=\{0:dd/MM/yyyy\}, XPath=Gun}" />
                                        <LineBreak />
                                        <Run Text="{Binding XPath=Aciklama}"
                                            Foreground="Green"
                                            FontWeight="Bold"
                                            ToolTip="{Binding XPath=Aciklama}" />
                                    </TextBlock>
                                </StackPanel>
                                <ComboBox ItemsSource="{Binding XPath=Dosyalar/Dosya}" FontWeight="Normal">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="24" Height="24" Source="{Binding Converter={StaticResource FileExtensionToIconConverter}, XPath=@Ext}" />
                                                <Button Content="AÇ" Command="{Binding DosyaAç, Mode=OneWay, Source={StaticResource Data}}" CommandParameter="{Binding XPath=@Yol}" />
                                                <TextBlock Text="{Binding XPath=@Ad}" VerticalAlignment="Center" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                    <ComboBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </ComboBox.ItemsPanel>
                                </ComboBox>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </GroupBox>
            <GroupBox Header="BÜGÜNKÜ LİSTE"
                Grid.Row="1"
                Foreground="Red"
                Margin="2,0,2,2"
                FontWeight="Bold">
                <ListBox Background="Transparent" ItemsSource="{Binding Mode=OneWay, Source={StaticResource FilteredCvs}}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding XPath=Aciklama}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </GroupBox>
        </Grid>
        <UniformGrid Grid.Row="2" Grid.Column="3" Columns="5">
            <ComboBox ItemsSource="{Binding Source={StaticResource Renkler}}"
                ItemContainerStyle="{StaticResource ComboBoxItemContainerStyle}"
                ItemTemplate="{StaticResource ComboBoxRectItemTemplate}"
                ItemsPanel="{StaticResource CbItemsPanelTemplate}"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                SelectedValue="{Binding SeçiliRenkCmt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedValuePath="Name" ToolTip="Cumartesi Renk" />
            <ComboBox ItemsSource="{Binding Source={StaticResource Renkler}}"
                ItemContainerStyle="{StaticResource ComboBoxItemContainerStyle}"
                ItemTemplate="{StaticResource ComboBoxRectItemTemplate}"
                ItemsPanel="{StaticResource CbItemsPanelTemplate}"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                SelectedValue="{Binding SeçiliRenkPaz, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedValuePath="Name" ToolTip="Pazar Renk" />
            <ComboBox ItemsSource="{Binding Source={StaticResource Renkler}}"
                ItemContainerStyle="{StaticResource ComboBoxItemContainerStyle}"
                ItemTemplate="{StaticResource ComboBoxRectItemTemplate}"
                ItemsPanel="{StaticResource CbItemsPanelTemplate}"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                SelectedValue="{Binding ResmiTatilRenk, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedValuePath="Name" ToolTip="Resmi Tatil Renk" />
            <ComboBox ItemsSource="{Binding Source={StaticResource Renkler}}"
                ItemContainerStyle="{StaticResource ComboBoxItemContainerStyle}"
                ItemTemplate="{StaticResource ComboBoxRectItemTemplate}"
                ItemsPanel="{StaticResource CbItemsPanelTemplate}"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                SelectedValue="{Binding GövdeRenk, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedValuePath="Name" ToolTip="Gövde Renk" />
            <Button Content="R" Command="{Binding AyarSıfırla, Mode=OneWay}" ToolTip="Renk Ayarlarını Sıfırla" />
        </UniformGrid>
        <Button Content="è"
            Grid.Row="0" Grid.Column="4" Grid.RowSpan="3"
            FontFamily="Wingdings"
            Command="{Binding İleri}"
            ToolTip="SONRAKİ YIL" />
    </Grid>
</Window>