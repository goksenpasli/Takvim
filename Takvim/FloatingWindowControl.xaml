<UserControl x:Class="Takvim.FloatingWindowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Takvim"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
    d:DesignHeight="200" d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <GroupBox Header="DUYURULAR" Background="Red">
            <ListBox ItemsSource="{Binding YaklaşanEtkinlikler}" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Foreground="Red"
                            FontSize="12" FontStyle="Italic" FontWeight="Bold">
                            <Run Text="{Binding TamTarih}" Language="tr-tr" />
                            <Run Text="{Binding GünNotAçıklama}" />
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</UserControl>
