<UserControl x:Class="Takvim.DataEnterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Takvim"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:Data}"
    d:DesignHeight="150" d:DesignWidth="250" UseLayoutRounding="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox Text="{Binding GünNotAçıklama, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" />
        <CheckBox Content="ÖNEMLİ Mİ" Grid.Row="1" IsChecked="{Binding ÖnemliMi}" />
        <Button Content="RESİM YÜKLE" Grid.Row="2" Command="{Binding ResimYükle, Mode=OneWay}" />
        <Button Content="VERİYİ EKLE" Grid.Row="3" Command="{Binding XmlVeriEkle, Mode=OneWay}" />
    </Grid>
</UserControl>